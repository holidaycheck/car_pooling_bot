{
	"title": {
		"type": "plain_text",
		"text": "Back Journey",
		"emoji": true
	},
	"submit": {
		"type": "plain_text",
		"text": "Create",
		"emoji": true
	},
	"type": "modal",
	"close": {
		"type": "plain_text",
		"text": "Cancel",
		"emoji": true
	},
	"blocks": [
		{
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "*Create Back Journey*"
			}
		},
		{
			"type": "divider"
		},
		{
			"type": "context",
			"elements": [
				{
					"type": "mrkdwn",
					"text": "*From :* {{from}}"
				}
			]
		},
		{
			"type": "context",
			"elements": [
				{
					"type": "mrkdwn",
					"text": "*To :* {{to}}"
				}
			]
		},
		{
			"type": "context",
			"elements": [
				{
					"type": "mrkdwn",
					"text": "*Date :* {{date}}"
				}
			]
		},
		{
			"type": "context",
			"elements": [
				{
					"type": "mrkdwn",
					"text": "*Time :* {{time}}"
				}
			]
		},
		{
			"type": "context",
			"elements": [
				{
					"type": "mrkdwn",
					"text": "*People Count :* {{personCount}}"
				}
			]
		},
		{
			"block_id": "start",
			"type": "input",
			"element": {
				"type": "datepicker",
				"initial_date": "{todayDate}",
				"placeholder": {
					"type": "plain_text",
					"text": "Select a date",
					"emoji": true
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Journey start",
				"emoji": true
			}
		},
		{
			"block_id": "startTime",
			"type": "input",
