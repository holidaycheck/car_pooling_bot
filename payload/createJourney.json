{
	"type": "modal",
	"title": {
		"type": "plain_text",
		"text": "Create New Journey",
		"emoji": true
	},
	"submit": {
		"type": "plain_text",
		"text": "Create",
		"emoji": true
	},
	"close": {
		"type": "plain_text",
		"text": "Cancel",
		"emoji": true
	},
	"blocks": [
		{
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "*Create New Journey*"
			}
		},
		{
			"type": "divider"
		},
		{
			"block_id": "from",
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "from_action"
			},
			"label": {
				"type": "plain_text",
				"text": "From",
				"emoji": true
			}
		},
		{
			"block_id": "to",
			"type": "input",
			"element": {
				"type": "plain_text_input"
			},
			"label": {
				"type": "plain_text",
				"text": "To",
				"emoji": true
			}
		},
		{
			"block_id": "start",
			"type": "input",
			"element": {
				"type": "datepicker",
				"initial_date": "{todayDate}",
				"placeholder": {
					"type": "plain_text",
					"text": "Select a date",
					"emoji": true
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Journey start",
				"emoji": true
			}
		},
		{
			"block_id": "startTime",
			"type": "input",
			"element": {
				"type": "static_select",
				"placeholder": {
					"type": "plain_text",
