extends layout

block content
    section(class="section")
        div(class="container has-text-centered")
          .container
              <table class="table">
                <thead>
                  <tr>
                    <th>Journey UUID</th>
                    <th>Journey Creator</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Date/Time</th>
                    <th>Persons</th>
                    <th>joined</th>
                    <th>View</th>
                  </tr>
                </thead>
                <tbody>
                  each journey in journeys 
                    tr(class= (journey.isExpire ? 'has-background-danger' : ''))
                      th= journey.journeyUUID
                      <th> 
                        a(href="/members/" + journey.slack_id)= journey.journeyOwnerRealName
                      </th>
                      th= journey.from_location
                      th= journey.to_location
                      th= journey.time
                      th= journey.person_count
                      th= journey.joins
                      <th>
                        a(href="/view/" + journey.journeyUUID) view
                      </tr>
                </tbody>
              </table>
